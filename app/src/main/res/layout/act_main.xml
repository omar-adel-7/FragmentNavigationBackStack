<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/matchParentStyle"
    android:orientation="vertical">

    <LinearLayout
        style="@style/matchParentStyle"
        android:orientation="vertical"
        android:id="@+id/main_lnr_content"
        android:layout_above="@+id/main_lnr_bottomservices"
        >
    </LinearLayout>



    <LinearLayout
            android:id="@+id/main_lnr_bottomservices"
            style="@style/matchWrapStyle"
            android:layout_gravity="bottom"
            android:minHeight="50dp"
            android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/side_tabs"
             >

            <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
                android:id="@+id/main_bnv_bottombar"
                style="@style/BottomNavigation"
                app:itemIconTint="@color/menu_icontint_color"
                app:itemTextColor="@color/menu_text_color"
                app:menu="@menu/main_navigation_items"
                android:paddingTop="@dimen/small_margin"
                />

        </LinearLayout>


</RelativeLayout>