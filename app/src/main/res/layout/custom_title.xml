<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/matchWrapStyle"
     android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:minHeight="45dp"
    android:gravity="right">

    <RelativeLayout
        android:id="@+id/custom_title_rl_main"
        style="@style/matchWrapStyle"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/customtitle_btn_back"
            style="@style/wrapStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="false"
            android:background="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/customtitle_txt_title"
            style="@style/wrapStyle"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:layout_alignTop="@+id/customtitle_btn_back"
            android:layout_alignBottom="@+id/customtitle_btn_back"
            android:gravity="center"
            android:textColor="@android:color/white" />

        <LinearLayout
            style="@style/wrapStyle"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/customtitle_btn_menu"
                style="@style/wrapStyle"
                android:visibility="gone"
                android:background="@drawable/ic_menu" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>